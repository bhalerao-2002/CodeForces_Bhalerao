int dir[]={0,1,0,-1,1,0,-1,0};
void solve()
{
	ll n;
	cin>>n;
	ll sq = sqrt(n);
	ll div = n/sq;
	ll ans = sq-1;
	ans += div-1;
	if(n%sq) ans++;
	cout<<ans<<endl;
}
int main()
{
    rushi
	int t=1;
	cin>>t;
	for(int cn=1;cn<=t;cn++)
	{
		solve();
	}
    return 0;
}
